@model FSO.Models.Event

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuwanie wydarzenia</h1>
<div>
    <hr />
    <dl class="row">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <strong>Nie musisz usuwać wydarzenia!</strong> Wydarzenie, które zakończy się, zniknie automatycznie z listy. Jego pozostawienie pomoże nam w odpowiedniej kategoryzacji dla użytkowników, a użytkownikom umożliwi przegląd, co się działo na osiedlu :)
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventType.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location.Name), @Html.DisplayFor(model => model.Location.Position)
        </dd>
        <dt class = "col-sm-2">
            Termin
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start) - @Html.DisplayFor(model => model.End)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" />
    </form>
</div>
