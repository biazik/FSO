@using Microsoft.AspNetCore.Identity
@model IEnumerable<FSO.Models.Event>
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@using System;

@{
    ViewData["Title"] = "Moduł Wydarzeń";
}

<div class="text-center">
    <h1 class="display-4">Moduł wydarzeń FS<strong>O</strong></h1>
    </br>
    @if (User.IsInRole("Admin"))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>Jesteś administratorem!</strong> Korzystaj ze swej mocy rozważnie.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    </br></br>
    <h3 class="display-6">Zerknij na wydarzenia publiczne</h3>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="custom-header">
                <tr>
                    <th>
                                @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                                @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                                @Html.DisplayNameFor(model => model.EventType)
                    </th>
                    <th>
                                @Html.DisplayNameFor(model => model.Location)
                    </th>
                    <th>
                        Czas trwania
                    </th>
                </tr>
            </thead>
            <tbody>
                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                                    @Html.DisplayFor(modelItem => item.EventType.Name)
                        </td>
                        <td>
                                    @Html.DisplayFor(modelItem => item.Location.Name) <span class="badge bg-light text-dark">@Html.DisplayFor(modelItem => item.Location.Position)</span>
                        </td>
                        <td>
                                    @Html.DisplayFor(modelItem => item.Start) - @Html.DisplayFor(modelItem => item.End)
                        </td>
                    </tr>
                        }
            </tbody>
        </table>
    </div>


</div>
